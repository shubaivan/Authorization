{% extends "::base.html.twig" %}

{% block title %}
    Wall
{% endblock %}

{% block content %}


<!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        {% if app.user %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Rules:
                        <small>Good, you do it right, upload foto</small>
                    </h1>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Rules:
                        <small>If you want upload foto you must enter in socail network Fa or Vk</small>
                    </h1>
                </div>
            </div>
        {% endif %}
        <!-- /.row -->

        <!-- Project One -->
        {% for photo in photos %}
        <div class="row">
            <div class="col-md-7">
                {#<a href="{{ photo.photo.path }}" target="_blank">#}
                <a href="{{ path("view_photo", {"slug" : photo.slug}) }}">
                    <img class="img-responsive" src="{{ photo.photo }}">
                </a>
                {#</a>#}

            </div>
            <div class="col-md-5">
                <h3> &#8470;{{ photo.id }}</h3>
                <h3>Upload: {{ photo.createdAt.date|date("d.m.Y H:i:s") }}</h3>
                Author: <b>{{ photo.author }}</b><br>
                Title: <b>{{ photo.title }}</b><br>
                Description: <p>{{ photo.text }}</p>
                {#<a class="btn btn-primary" href="#">View Project <span class="glyphicon glyphicon-chevron-right"></span></a>#}
            </div>
        </div>
        <!-- /.row -->

        <hr>

        {% else %}

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        <small>Photo not found</small>
                    </h1>
                </div>
            </div>

        {% endfor%}
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; <a href="https://www.facebook.com/profile.php?id=1087489034">ShubaIvan</a>
                        Wall Photo 2015
                        <a href="https://bitbucket.org/aog-development/aog-profile">bitbucket</a>
                    </p>


                </div>
            </div>
            <!-- /.row -->
        </footer>
    </div>

{% endblock %}

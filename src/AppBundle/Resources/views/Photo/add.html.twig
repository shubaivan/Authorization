{% extends '::base.html.twig' %}

{% block title %}
    Создание проекта
{% endblock %}

{% block styles %}

{% endblock %}

{% block content %}

    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <small>Upload</small>
                </h1>
                <form role="form" enctype="multipart/form-data" novalidate method="POST" id="create_post">
                    <fieldset>
                        <legend>Created Photo</legend>
                        <div>
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title) }}
                            <div id="clear"></div>
                        </div>

                        <div>
                            {{ form_label(form.text) }}
                            {{ form_widget(form.text) }}
                            <div id="clear"></div>
                        </div>

                        <div>
                            {{ form_label(form.photo) }}
                            {{ form_widget(form.photo) }}
                            <div id="clear"></div>
                        </div>

                        <div>
                            {{ form_rest(form) }}
                        </div>



                        <div>
                            <input type="submit" value="upload photo">
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
        <!-- /.row -->


        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; <a href="https://www.linkedin.com/profile/preview?locale=ru_RU&trk=prof-0-sb-preview-primary-button">ShubaIvan</a>
                        Wall Photo 2015
                        <a href="https://bitbucket.org/shuba_ivan/hwio">bitbucket</a>
                    </p>


                </div>
            </div>
            <!-- /.row -->
        </footer>
    </div>



{% endblock %}
